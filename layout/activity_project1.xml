<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Project_1">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textSize="40dp"
        android:layout_marginLeft="80dp"
        />

    <EditText
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="5dp"
        android:hint="Enter First Number "
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t1"
        android:layout_marginTop="5dp"
        android:hint="Enter Second Number "
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/ans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/t2"
        android:layout_marginTop="5dp"
        android:hint="Answer"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ans"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="1"
        android:textSize="50dp"
        />
    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ans"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:textSize="50dp"
        android:text="2"
        />
    <Button
        android:id="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ans"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="210dp"
        android:textSize="50dp"
        android:text="3"
        />
    <Button
        android:id="@+id/btAc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ans"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="310dp"
        android:textSize="30dp"
        android:text="ON"
        />
    <Button
        android:id="@+id/bt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="4"
        android:textSize="50dp"
        />
    <Button
        android:id="@+id/bt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="110dp"
        android:textSize="50dp"
        android:text="5"
        />
    <Button
        android:id="@+id/bt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="210dp"
        android:textSize="50dp"
        android:text="6"
        />
    <Button
        android:id="@+id/btDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt1"
        android:layout_marginTop="-1dp"
        android:layout_marginLeft="310dp"
        android:textSize="25dp"
        android:text="Del"
        />
    <Button
        android:id="@+id/bt7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="7"
        android:textSize="50dp"
        />
    <Button
        android:id="@+id/bt8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="110dp"
        android:textSize="50dp"
        android:text="8"
        />
    <Button
        android:id="@+id/bt9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="210dp"
        android:textSize="50dp"
        android:text="9"
        />
    <Button
        android:id="@+id/btCe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btDel"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="310dp"
        android:textSize="35dp"
        android:text="CE"
        />
    <Button
        android:id="@+id/bt00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt7"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="00"
        android:textSize="48dp"
        />
    <Button
        android:id="@+id/bt0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt7"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="110dp"
        android:textSize="50dp"
        android:text="0"
        />
    <Button
        android:id="@+id/btDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt7"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="210dp"
        android:textSize="50dp"
        android:text="."
        />
    <Button
        android:id="@+id/btM1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btCe"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="310dp"
        android:textSize="30dp"
        android:text="M+"
        />
    <Button
        android:id="@+id/btM2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btM1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="310dp"
        android:textSize="30dp"
        android:text="M-"
        />
    <Button
        android:id="@+id/btsum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt00"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="+"
        android:textSize="48dp"
        />
    <Button
        android:id="@+id/btsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt00"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="110dp"
        android:textSize="50dp"
        android:text="-"
        />
    <Button
        android:id="@+id/btmul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt00"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="210dp"
        android:textSize="50dp"
        android:text="*"
        />
    <Button
        android:id="@+id/btdiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btM2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="310dp"
        android:textSize="50dp"
        android:text="/"
        />
    <Button
        android:id="@+id/btspc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btsum"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Space"
        android:textSize="45dp"
        />
    <Button
        android:id="@+id/bteql"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btsum"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="210dp"
        android:textSize="50dp"
        android:text="="
        />
    <Button
        android:id="@+id/btmod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btsum"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="310dp"
        android:textSize="50dp"
        android:text="%"
        />

</RelativeLayout>